{% extends 'base2.html.twig' %}

{% block title %}Inscription Partenaire{% endblock %}

{% block body %}
<div class="container mt-4">
  <div class="card shadow-lg p-4" style="max-width: 1200px; margin: auto; border-radius: 10px;padding: 10px;">
    <h2 class="text-center fw-bold" style="color: #6188ae;">Inscription Partenaire</h2>
    <p class="text-center text-muted">Rejoignez notre réseau de partenaires et participez à des événements exceptionnels !</p>
    
    {{ form_start(registrationForm, {'attr': {'class': 'partenaire-form', 'novalidate': 'novalidate'}}) }}
    
    <div class="row mt-4">
        <!-- Left Section -->
        <div class="col-md-6">
            <h4 class="mb-3">Informations Personnelles</h4>
            <div class="form-group mb-3">
                <label for="nom">Nom</label>
                <div class="input-wrapper">
                    <i class="fas fa-user icon"></i>
                    {{ form_widget(registrationForm.user.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                </div>
                {% if not registrationForm.user.nom.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.nom) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="form-group mb-3">
                <label for="prenom">Prénom</label>
                <div class="input-wrapper">
                    <i class="fas fa-user icon" style="color:#6188ae;"></i>
                    {{ form_widget(registrationForm.user.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                </div>
                {% if not registrationForm.user.prenom.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.prenom) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="form-group mb-3">
                <label for="email">Email</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope icon"></i>
                    {{ form_widget(registrationForm.user.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                </div>
                {% if not registrationForm.user.email.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.email) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="form-group mb-3">
                <label for="mot_de_passe">Mot de passe</label>
                <div class="input-wrapper">
                    <i class="fas fa-lock icon"></i>
                    {{ form_widget(registrationForm.user.mot_de_passe, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                </div>
                {% if not registrationForm.user.mot_de_passe.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.mot_de_passe) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group mb-3">
                <label for="adresse">Adresse</label>
                <div class="input-wrapper">
                    <i class="fas fa-home icon"></i>
                    {{ form_widget(registrationForm.user.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                </div>
               {% if not registrationForm.user.adresse.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.adresse) }}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Right Section -->
        <div class="col-md-6">
            <h4 class="mb-3">Informations Professionnelles</h4>
            <div class="form-group mb-3">
                <label for="workField">Domaine de travail</label>
                <div class="input-wrapper">
                    <i class="fas fa-briefcase icon"></i>
                    {{ form_widget(registrationForm.type_service, {'attr': {'class': 'form-control', 'placeholder': 'Domaine de travail'}}) }}
                </div>
                {% if not registrationForm.type_service.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.type_service) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="form-group mb-3">
                <label for="workEmail">Email Professionnel</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope icon"></i>
                    {{ form_widget(registrationForm.site_web, {'attr': {'class': 'form-control', 'placeholder': 'Site Web'}}) }}
                </div>
                {% if not registrationForm.site_web.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.site_web) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group mb-3">
                <label for="nbre_contacts">Nombre de contacts</label>
                <div class="input-wrapper">
                    <i class="fas fa-users icon"></i>
                    {{ form_widget(registrationForm.nbre_contacts, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de contacts'}}) }}
                </div>
                {% if not registrationForm.nbre_contacts.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.nbre_contacts) }}
                    </div>
                {% endif %}
            </div>

            <!-- New fields moved here -->
            <h4 class="mb-3">Informations de Contact</h4>
            <div class="form-group mb-3">
                <label for="date_naiss">Date de naissance</label>
                <div class="input-wrapper">
                    <i class="fas fa-calendar-alt icon"></i>
                    {{ form_widget(registrationForm.user.date_naiss, {'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'}}) }}
                </div>
                {% if not registrationForm.user.date_naiss.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.date_naiss) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- New Row for Téléphone Field -->
    <div class="row mt-4">
    <div class="col-md-6 mx-auto text-center">
        <div class="form-group mb-3">
            <label for="telephone">Téléphone</label>
            <div class="input-wrapper">
                <i class="fas fa-phone icon"></i>
                {{ form_widget(registrationForm.user.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
            </div>
                       {% if not registrationForm.user.telephone.vars.valid %}
                    <div class="invalid-feedback d-block">
                        {{ form_errors(registrationForm.user.telephone) }}
                    </div>
                {% endif %}

        </div>
    </div>
</div>

 {{ form_rest(registrationForm) }}
    <!-- Submit Button -->
    <button type="submit" class="btn w-100 py-2" style="background-color: #6188ae; border-color: #6188ae; color: white;">
        <i class="fas fa-user-plus"></i> S'inscrire
    </button>

    {{ form_end(registrationForm) }}
  </div>
</div>
<style>
    /* Make error messages stand out */
    .invalid-feedback {
        display: block;
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 0.25rem;
    }
    
    /* Style the input wrapper for error state */
    .form-control.is-invalid {
        border-color: #dc3545;
        padding-right: calc(1.5em + 0.75rem);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
    
    /* Global form error message styling */
    .alert-danger {
        color: #842029;
        background-color: #f8d7da;
        border-color: #f5c2c7;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 0.25rem;
    }
</style>
{% endblock %}
