{# templates/partenaire/_delete_form.html.twig #}

<form method="post" action="{{ path('app_partenaire_delete', {'id_partenaire': partenaire.idpartenaire}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce partenaire ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partenaire.idpartenaire) }}">
  <button class="btn btn-danger mt-2">Supprimer</button>
</form>
