<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Gestion des Offres</title>
    <link rel="icon" href="{{ asset('assets/img/logo.jpg') }}">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/style1.css') }}" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&family=Poppins&family=Raleway&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color:rgba(161, 161, 163, 0.82);
        }
        .table-container::-webkit-scrollbar { width: 10px; height: 10px; }
        .table-container::-webkit-scrollbar-track { background: #f1f1f1; border-radius: 10px; }
        .table-container::-webkit-scrollbar-thumb { background: #007bff; border-radius: 10px; }
        .table-container::-webkit-scrollbar-thumb:hover { background: #0056b3; }
        .table-container { scrollbar-color: #007bff #f1f1f1; scrollbar-width: thin; }
        .btn-add-offre { background-color: transparent; color: black; border: 2px solid black; }
        .btn-add-offre i { color: black; }
        .btn-add-offre:hover { background-color: black; color: white; }
        .btn-search { background-color: #007bff; border: none; color: white; }
        .btn-search:hover { background-color: #0056b3; color: white; }
    </style>
</head>

<body>
<div class="container">

    <!-- NAVIGATION -->
    <nav id="content" class="d-flex align-items-center justify-content-between mb-4 mt-3">
        <i class='bx bx-menu toggle-sidebar'></i>
        <div class="d-flex align-items-center">
            <a href="#" class="nav-link">
                <i class='bx bxs-bell icon'></i>
                <span class="badge bg-danger">5</span>
            </a>
            <a href="#" class="nav-link">
                <i class='bx bxs-message-square-dots icon'></i>
                <span class="badge bg-danger">8</span>
            </a>
            <span class="divider"></span>
            <div class="profile">
                <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9" alt="Profile Picture" width="40" height="40" class="rounded-circle">
            </div>
        </div>
    </nav>

    <!-- SIDEBAR -->
    <aside>
        <section id="sidebar">
            <a href="#" class="brand"><i class='bx bxs-smile icon'></i> AdminEvencia</a>
            <ul class="side-menu">
                <li><a href="#"><i class='bx bxs-dashboard icon'></i> Dashboard</a></li>
                <li class="divider" data-text="main">Main</li>
                <li><a href="{{ path('app_user_index') }}"><i class="fas fa-users" style="color: rgb(29, 73, 121); margin-right: 10px;"></i> All Users</a></li>
                <ul class="user-navigation">
                    <li><a href="{{ path('app_organisateur_index') }}?role=organisateur"><i class="fas fa-user-tie" style="color: rgb(29, 73, 121); margin-right: 10px;"></i> Organisateurs</a></li>
                    <li><a href="{{ path('app_participant_index') }}?role=participant"><i class="fas fa-users" style="color:rgb(29, 73, 121); margin-right: 10px;"></i> Participants</a></li>
                    <li><a href="{{ path('app_partenaire_index') }}?role=partenaire"><i class="fas fa-handshake" style="color: rgb(29, 73, 121); margin-right: 10px;"></i> Partenaires</a></li>
                </ul>
            </ul>
        </section>
    </aside>

    <main>
        <section id="content">
            <div class="container mt-5">

                <h1 class="text-center mb-5">Gestion des Offres</h1>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                <form method="get" action="{{ path('offre_front_back_index') }}" class="mb-4">
                    <div class="d-flex align-items-center gap-2">
                        <input type="text" name="search" class="form-control" placeholder="Rechercher une offre par titre..." value="{{ app.request.get('search') }}">
                        <select name="sort" class="form-select" style="max-width: 200px;">
                            <option value="">Trier par taux de réduction</option>
                            <option value="asc" {% if app.request.get('sort') == 'asc' %}selected{% endif %}>Taux croissant</option>
                            <option value="desc" {% if app.request.get('sort') == 'desc' %}selected{% endif %}>Taux décroissant</option>
                        </select>
                        <button class="btn btn-search" type="submit">Appliquer</button>
                    </div>
                </form>

                <div class="text-end mb-4">
                    <a href="{{ path('offre_front_back_new') }}" class="btn btn-add-offre">
                        <i class="fas fa-plus"></i> Ajouter une Offre
                    </a>
                </div>

                <div class="card shadow p-4 mb-5">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Liste des Offres</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-container">
                            <table class="table table-bordered table-hover text-center">
                                <thead class="table-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Titre</th>
                                        <th>Description</th>
                                        <th>Date de début</th>
                                        <th>Taux de réduction (%)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for offre in offres %}
                                        <tr>
                                            <td>{{ offre.idoffre }}</td>
                                            <td>{{ offre.titre }}</td>
                                            <td>{{ offre.description|slice(0, 50) ~ (offre.description|length > 50 ? '...' : '') }}</td>
                                            <td>
                                                {% if offre.dateDebut is not empty %}
                                                    {{ offre.dateDebut }}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td>{{ offre.tauxReduction }}</td>
                                            <td>
                                                <a href="{{ path('offre_front_back_show', {'id': offre.idoffre}) }}" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye" style="color: black;"></i>
                                                </a>
                                                <a href="{{ path('offre_front_back_edit', {'id': offre.idoffre}) }}" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit" style="color: black;"></i>
                                                </a>
                                                <form method="post" action="{{ path('offre_front_back_delete', {'id': offre.idoffre}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.idoffre) }}">
                                                    <button class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash" style="color: black;"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">Aucune offre disponible.</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card shadow p-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0 text-center">Statistique en fonction du taux de réduction</h4>
                    </div>
                    <div class="card-body d-flex justify-content-center">
                        <div style="width: 300px; height: 300px;">
                            <canvas id="reductionChart" width="250" height="250"></canvas>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </main>

</div>

<!-- SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('assets/js/script.js') }}"></script>
<script>
    const ctx = document.getElementById('reductionChart').getContext('2d');
    const reductionChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: {{ reductionLabels|json_encode|raw }},
            datasets: [{
                label: 'Répartition des taux de réduction',
                data: {{ reductionData|json_encode|raw }},
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
                borderColor: [
                    'rgba(255,255,255,1)'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top'
                }
            }
        }
    });
</script>

</body>
</html>
