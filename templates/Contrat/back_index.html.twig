<!DOCTYPE html> 
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Gestion des Contrats</title>
    <link rel="icon" href="{{ asset('assets/img/logo.jpg') }}">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/style1.css') }}" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&family=Poppins&family=Raleway&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: rgba(161, 161, 163, 0.82);
        }
        .table-container::-webkit-scrollbar { width: 10px; height: 10px; }
        .table-container::-webkit-scrollbar-track { background: #f1f1f1; border-radius: 10px; }
        .table-container::-webkit-scrollbar-thumb { background: #007bff; border-radius: 10px; }
        .table-container::-webkit-scrollbar-thumb:hover { background: #0056b3; }
        .table-container { scrollbar-color: #007bff #f1f1f1; scrollbar-width: thin; }
        .btn-search { background-color: #007bff; border: none; color: white; }
        .btn-search:hover { background-color: #0056b3; color: white; }
    </style>
</head>

<body>
<div class="container-fluid">

    <!-- NAVIGATION -->
    <nav id="content" class="d-flex align-items-center justify-content-between mb-4 mt-3">
        <i class='bx bx-menu toggle-sidebar'></i>
        <div class="d-flex align-items-center">
            <a href="#" class="nav-link">
                <i class='bx bxs-bell icon'></i>
                <span class="badge bg-danger">5</span>
            </a>
            <a href="#" class="nav-link">
                <i class='bx bxs-message-square-dots icon'></i>
                <span class="badge bg-danger">8</span>
            </a>
            <span class="divider"></span>
            <div class="profile">
                <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9" alt="Profile Picture" width="40" height="40" class="rounded-circle">
            </div>
        </div>
    </nav>

    <!-- SIDEBAR -->
    <aside>
        <section id="sidebar">
            <a href="#" class="brand"><i class='bx bxs-smile icon'></i> AdminEvencia</a>
            <ul class="side-menu">
                <li><a href="#"><i class='bx bxs-dashboard icon'></i> Dashboard</a></li>
                <li class="divider" data-text="main">Main</li>
                <li><a href="{{ path('app_user_index') }}"><i class="fas fa-users" style="color: rgb(29, 73, 121); margin-right: 10px;"></i> All Users</a></li>
                <ul class="user-navigation">
                    <li><a href="{{ path('app_organisateur_index') }}?role=organisateur"><i class="fas fa-user-tie" style="color: rgb(29, 73, 121); margin-right: 10px;"></i> Organisateurs</a></li>
                    <li><a href="{{ path('app_participant_index') }}?role=participant"><i class="fas fa-users" style="color:rgb(29, 73, 121); margin-right: 10px;"></i> Participants</a></li>
                    <li><a href="{{ path('app_partenaire_index') }}?role=partenaire"><i class="fas fa-handshake" style="color: rgb(29, 73, 121); margin-right: 10px;"></i> Partenaires</a></li>
                </ul>
            </ul>
        </section>
    </aside>

    <!-- MAIN CONTENT -->
    <main>
        <section id="content">
            <div class="container mt-5">

                <h1 class="mb-5 text-center">Gestion des Contrats</h1>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                <!-- FORMULAIRE RECHERCHE + TRI -->
                <form method="get" action="{{ path('contrat_front_back_index') }}" class="mb-4">
                    <div class="d-flex align-items-center gap-2">
                        <input type="text" name="search" class="form-control" placeholder="Rechercher un contrat par conditions..." value="{{ app.request.get('search') }}">
                        <select name="sort" class="form-select" style="max-width: 200px;">
                            <option value="">Trier par montant</option>
                            <option value="asc" {% if app.request.get('sort') == 'asc' %}selected{% endif %}>Montant croissant</option>
                            <option value="desc" {% if app.request.get('sort') == 'desc' %}selected{% endif %}>Montant décroissant</option>
                        </select>
                        <button class="btn btn-search" type="submit">Appliquer</button>
                    </div>
                </form>

                <!-- CARD TABLEAU CONTRATS -->
                <div class="card shadow p-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Liste des Contrats</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-container">
                            <table class="table table-bordered table-hover text-center">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Nom Utilisateur</th>
                                        <th>Nom Offre</th>
                                        <th>Nom Événement</th>
                                        <th>Date d'Expiration</th>
                                        <th>Montant (€)</th>
                                        <th>Conditions</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for contrat in contrats %}
                                        <tr>
                                            <td>{{ users[contrat.iduser] ?? 'Utilisateur supprimé' }}</td>
                                            <td>{{ offres[contrat.idoffre] ?? 'Offre supprimée' }}</td>
                                            <td>{{ events[contrat.idevent] ?? 'Événement supprimé' }}</td>
                                            <td>{{ contrat.dateExpiration }}</td>
                                            <td>{{ contrat.montant }} €</td>
                                            <td>{{ contrat.conditionsContrat|slice(0, 100) ~ (contrat.conditionsContrat|length > 100 ? '...' : '') }}</td>
                                            <td>
                                                <a href="{{ path('contrat_front_back_show', {'id': contrat.id}) }}" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye" style="color: black;"></i>
                                                </a>
                                                <a href="{{ path('contrat_front_back_edit', {'id': contrat.id}) }}" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit" style="color: black;"></i>
                                                </a>
                                                <a href="{{ path('contrat_front_back_pdf', {'id': contrat.id}) }}" class="btn btn-secondary btn-sm" target="_blank">
                                                    <i class="fas fa-file-pdf" style="color: red;"></i>
                                                </a>

                                                <a href="{{ path('contrat_front_back_signature', {'id': contrat.id}) }}" class="btn btn-success btn-sm">
                                                    <i class="fas fa-pen" style="color: white;"></i> 
                                                </a>

                                                <form method="post" action="{{ path('contrat_front_back_delete', {'id': contrat.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce contrat ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
                                                    <button class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash" style="color: black;"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">Aucun contrat disponible.</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </main>

</div>

<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('assets/js/script.js') }}"></script>

</body>
</html>