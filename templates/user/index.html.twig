{% extends 'base1.html.twig' %}

{% block body %}
    

    

    {% if users is not empty %}
        <div class="table-container" style="overflow-x: auto; max-width: 100%;">

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Date de naissance</th>
                    <th>Adresse</th>
                    <th>Téléphone</th>
                    <th>Role</th>
                    <th>Date d'inscription</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.datenaiss ? user.datenaiss|date('Y-m-d') : '' }}</td>
                    <td>{{ user.adresse }}</td>
                    <td>{{ user.telephone }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.dateinscription ? user.dateinscription|date('Y-m-d') : '' }}</td>
                    <td>
                        <div class="action-buttons">
                            <form action="{{ path('app_user_show', {'id': user.id}) }}" method="get" style="display:inline;">
                                <button type="submit" class="btn btn-info">Show</button>
                            </form>
                            <form action="{{ path('app_user_edit', {'id': user.id}) }}" method="get" style="display:inline;">
                                <button type="submit" class="btn btn-warning">Edit</button>
                            </form>
                            <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    {% else %}
        <p>Aucun utilisateur trouvé.</p>
    {% endif %}

{% endblock %}
