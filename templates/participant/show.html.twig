{% extends 'base1.html.twig' %}

{% block title %}Détails du Participant - {{ participant.user.nom }} {{ participant.user.prenom }}{% endblock %}

{% block body %}
  <div class="container">
    <div class="profile-card">
      <div class="profile-header">
        <img src="{{ asset('images/default-avatar.png') }}" alt="Profile Image" class="profile-pic">
        <h2>{{ participant.user.nom }} {{ participant.user.prenom }}</h2>
        <p>Participant Actif</p>
        <div class="btn-group">
          <a href="#" class="btn primary">Suivre</a>
          <a href="#" class="btn secondary">Message</a>
        </div>
      </div>
      <div class="profile-links">
        <a href="#" class="social-link">🐦 Twitter</a>
        <a href="#" class="social-link">📷 Instagram</a>
        <a href="#" class="social-link">📘 Facebook</a>
      </div>
    </div>

    <div class="details-container">
      <div class="info-card">
        <h3>Informations Personnelles</h3>
        <p><strong>Email:</strong> {{ participant.user.email }}</p>
        <p><strong>Téléphone:</strong> {{ participant.user.telephone }}</p>
        <p><strong>Date d'inscription:</strong> {{ participant.user.dateinscription|date('d/m/Y') }}</p>
      </div>

      <div class="info-card">
        <h3>Activité</h3>
        <p><strong>Nombre de Participations:</strong> {{ participant.nombreParticipations }}</p>
      </div>
    </div>

    <div class="actions">
      <a href="{{ path('app_participant_edit', {'id_participant': participant.id_participant}) }}" class="btn">Modifier</a>
      <form method="post" action="{{ path('app_participant_delete', {'id_participant': participant.id_participant}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce participant ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id_participant) }}">
        <button type="submit" class="btn danger">Supprimer</button>
      </form>
    </div>
  </div>
{% endblock %}
